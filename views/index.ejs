  <!DOCTYPE html>
  <html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/styles.css">
    <title>My Blog</title>
  </head>
  <body>
    <header>
      <h1>My Blog</h1>
      <a href="/new" class="btn">Create a New Post</a>
    </header>
    <main>
      <% if (posts.length > 0) { %>
        <ul class="post-list">
          <% posts.forEach(post => { %>
            <li class="post-item">
              <a href="/post/<%= post.id %>"><h2><%= post.title %></h2></a>
              <p><%= post.content.substring(0, 100) %>...</p>
            </li>
          <% }); %>
        </ul>
      <% } else { %>
        <p>No posts available. Be the first to create one!</p>
      <% } %>
    </main>
  </body>
  </html>
